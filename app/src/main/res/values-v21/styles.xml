<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorControlHighlight">@color/primaryDark</item>
    </style>

    <style name="Toolbar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TextTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name = "android:fontFamily">sans-serif</item>
    </style>

    <style name="SubtleTextTheme">
        <item name="android:textColor">@color/subtle_white</item>
        <item name = "android:fontFamily">sans-serif-light</item>
    </style>
</resources>
